    "packages:dev": "esno ./scripts/package.ts dev ",
    "packages:pub": "esno ./scripts/package.ts pub",
    "clear:dist": "esno ./scripts/clear.ts dev ",
    "rm:node_modules": "lerna exec -- rimraf ./node_modules",
