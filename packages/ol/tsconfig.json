{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "types": [
      "node"
    ],
    "typeRoots": [
      "../../node_modules/@types/",
      "./node_modules/@types/",
      "./src/types/"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "*.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}
